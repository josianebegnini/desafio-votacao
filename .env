# ===========================
# Configurações do PostgreSQL
# ===========================
POSTGRES_DB=votacao
POSTGRES_USER=user
POSTGRES_PASSWORD=pass

# ===========================
# Configurações do Spring Boot
# ===========================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}

# Kafka
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Perfil ativo do Spring (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# Servidor
SERVER_ADDRESS=0.0.0.0
SERVER_PORT=8080

# ===========================
# Configurações para testes
# ===========================
# Caso queira diferenciar banco de testes:
POSTGRES_TEST_DB=votacao_test
POSTGRES_TEST_USER=test_user
POSTGRES_TEST_PASSWORD=test_pass
SPRING_DATASOURCE_TEST_URL=jdbc:postgresql://postgres:5432/${POSTGRES_TEST_DB}
SPRING_DATASOURCE_TEST_USERNAME=${POSTGRES_TEST_USER}
SPRING_DATASOURCE_TEST_PASSWORD=${POSTGRES_TEST_PASSWORD}

# ===========================
# Configurações de produção
# ===========================
POSTGRES_PROD_DB=votacao_prod
POSTGRES_PROD_USER=prod_user
POSTGRES_PROD_PASSWORD=prod_pass
SPRING_DATASOURCE_PROD_URL=jdbc:postgresql://postgres:5432/${POSTGRES_PROD_DB}
SPRING_DATASOURCE_PROD_USERNAME=${POSTGRES_PROD_USER}
SPRING_DATASOURCE_PROD_PASSWORD=${POSTGRES_PROD_PASSWORD}
SPRING_PROFILES_PROD=prod